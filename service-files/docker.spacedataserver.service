[Unit]
Description=SpaceDataServer

[Service]
ExecStart=node /opt/software/space-data-server/build/server.cjs
Restart=always
User=root
Group=root
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/opt/software/space-data-server

[Install]
WantedBy=multi-user.target
