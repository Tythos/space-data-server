{
  "compilerOptions": {
    "typeRoots": [
      "./lib/class",
      "./lib/class/index.d.ts",
      "node_modules/@types"
    ],
    "noImplicitThis": false,
    "noImplicitAny": false,
    "target": "esnext",
    "module": "es2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["ES2021.String"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "lib/**/*",
    "node_modules/keyconverter/build/types/src/keyconverter.d.ts",
    "scripts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".testdata",
    ".testdatabase",
    "plugins",
    "service-files",
    "scripts",
    "plugins",
    "packages",
    "smartcontract",
    "test/**/*",
    "UI/**/*",
    ".keys"
  ]
}
